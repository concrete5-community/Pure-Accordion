<?xml version="1.0" encoding="UTF-8"?>
<schema
    xmlns="http://www.concrete5.org/doctrine-xml/0.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 https://concretecms.github.io/doctrine-xml/doctrine-xml-0.5.xsd"
>

    <table name="btPureAccordion">
        <field name="bID" type="integer">
            <unsigned />
            <key />
        </field>
        <field name="title" type="string" size="255">
            <notnull />
        </field>
        <field name="handle" type="string" size="255">
            <notnull />
        </field>
        <field name="content" type="text">
            <notnull />
        </field>
        <field name="openedByDefault" type="boolean">
            <notnull />
        </field>
        <field name="showPermalink" type="boolean">
            <notnull />
        </field>
        <field name="groupHandle" type="string" size="255">
            <notnull />
        </field>
    </table>

</schema>
